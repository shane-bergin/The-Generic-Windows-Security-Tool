<UserControl x:Class="TGWST.App.Tabs.ScanTab" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
<Grid Margin="8">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="120"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
        <TextBlock Text="Scan type:" VerticalAlignment="Center" Margin="0,0,8,0"/>
        <ComboBox x:Name="ScanTypeCombo" Width="180">
            <ComboBoxItem Content="Quick (YARA)"/>
            <ComboBoxItem Content="Deep (YARA)"/>
        </ComboBox>
        <CheckBox x:Name="ClamCheck" Content="Use ClamAV deep scan" Margin="8,0,0,0" IsChecked="{Binding UseClamAv}"/>
        <Button Content="Scan" Click="Scan_Click" Margin="8,0,0,0"/>
        <ProgressBar x:Name="ProgressRing"
                     Width="150"
                     Height="16"
                     Margin="8,0,0,0"
                     Minimum="0"
                     Maximum="100"
                     Value="{Binding Progress}"
                     Visibility="{Binding ProgressVisible}"
                     IsIndeterminate="{Binding ProgressIndeterminate}"/>
    </StackPanel>

    <DataGrid Grid.Row="1"
              ItemsSource="{Binding Results}"
              AutoGenerateColumns="False"
              IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="2*"/>
            <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="Auto"/>
            <DataGridTextColumn Header="Engine" Binding="{Binding Engine}" Width="*"/>
            <DataGridTextColumn Header="Family" Binding="{Binding ThreatFamily}" Width="*"/>
            <DataGridTextColumn Header="Reason" Binding="{Binding Reason}" Width="3*"/>
        </DataGrid.Columns>
    </DataGrid>

        <GroupBox Header="Scan log" Grid.Row="2" Margin="0,8,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox Text="{Binding LogText}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </GroupBox>

    <Grid Grid.Row="3" Margin="0,8,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding Status}" VerticalAlignment="Center"/>
            <Button Content="Reload Feeds" Margin="8,0,0,0" Click="ReloadFeeds_Click"/>
            <TextBlock Text="{Binding ThreatFeeds.YaraRuleCount, StringFormat='YARA rules: {0}'}" Margin="12,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ThreatFeeds.IocBundleCount, StringFormat='IOC bundles: {0}'}" Margin="12,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ThreatFeeds.TotalFamilies, StringFormat='Families: {0}'}" Margin="12,0,0,0" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding ThreatFeeds.LastReloadDisplay}" Margin="12,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <GroupBox Header="IOC Feeds" Grid.Row="1" Margin="0,8,0,0">
            <DataGrid ItemsSource="{Binding IocBundles}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Family" Binding="{Binding Family}" Width="*"/>
                    <DataGridTextColumn Header="Mutexes" Binding="{Binding MutexCount}" Width="Auto"/>
                    <DataGridTextColumn Header="Domains" Binding="{Binding DomainCount}" Width="Auto"/>
                    <DataGridTextColumn Header="Filenames" Binding="{Binding FilenameCount}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Grid>
</UserControl>
