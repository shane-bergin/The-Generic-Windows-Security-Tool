<UserControl x:Class="TGWST.App.Tabs.DriftTab" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Margin="0,0,0,8"
                   TextWrapping="Wrap"
                   Text="Continuously re-check the selected baseline and report changes (drift) over time."/>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
            <TextBox Width="320" Margin="0,0,8,0" Text="{Binding SelectedBaselineName}" IsReadOnly="True"/>
            <ComboBox Width="120" Margin="0,0,8,0" ItemsSource="{Binding Intervals}" SelectedItem="{Binding IntervalSeconds, Mode=TwoWay}"/>
            <Button Content="Start" Click="Start_Click" Margin="0,0,8,0" IsEnabled="{Binding CanStart}"/>
            <Button Content="Stop" Click="Stop_Click" IsEnabled="{Binding IsMonitoring}"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="{Binding Status}"/>
    </Grid>
</UserControl>
