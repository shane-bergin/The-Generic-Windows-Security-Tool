<UserControl x:Class="TGWST.App.Tabs.HardeningTab" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
<Grid Margin="8">
<Grid.RowDefinitions>
<RowDefinition Height="Auto"/>
<RowDefinition Height="*"/>
</Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
        <TextBlock Text="Profile:" VerticalAlignment="Center" Margin="0,0,8,0"/>
        <ComboBox x:Name="ProfileCombo" Width="150">
            <ComboBoxItem Content="Balanced"/>
            <ComboBoxItem Content="Aggressive"/>
            <ComboBoxItem Content="Audit"/>
            <ComboBoxItem Content="Revert"/>
        </ComboBox>
        <Button Content="Apply" Margin="8,0,0,0" Click="ApplyProfile_Click"/>
    </StackPanel>

    <StackPanel Grid.Row="1">
        <TextBlock x:Name="StatusText"
                   Margin="0,0,0,4"
                   Text="Ready"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
            <TextBox x:Name="LogBox"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     FontFamily="Consolas"
                     FontSize="12"
                     VerticalScrollBarVisibility="Auto"/>
        </ScrollViewer>
        <Image Source="Assets/generic_windows_security_tool_icon.png"
               Width="180"
               Height="180"
               Stretch="Uniform"
               Margin="0,12,0,0"
               HorizontalAlignment="Left"/>
    </StackPanel>
</Grid>
</UserControl>
