<UserControl x:Class="TGWST.App.Tabs.WdacTab" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBox x:Name="PolicyPathBox" Width="400" Margin="0,0,8,0" />
            <CheckBox x:Name="EnforceCheck" Content="Enforce (UMCI)" Margin="0,0,8,0"/>
            <Button Content="Apply WDAC" Click="Apply_Click" Margin="0,0,8,0"/>
            <Button Content="Remove WDAC" Click="Remove_Click"/>
        </StackPanel>

        <TextBlock x:Name="StatusText" Grid.Row="1" Text="Ready"/>
    </Grid>
</UserControl>
