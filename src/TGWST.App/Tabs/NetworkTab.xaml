<UserControl x:Class="TGWST.App.Tabs.NetworkTab" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
<Grid Margin="8">
<Grid.RowDefinitions>
<RowDefinition Height="Auto"/>
<RowDefinition Height="2*"/>
<RowDefinition Height="Auto"/>
</Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
        <Button Content="Fortress Mode (block inbound)" Click="Fortress_Click" Margin="0,0,8,0"/>
        <Button Content="Reset Firewall" Click="ResetFw_Click" Margin="0,0,8,0"/>
        <Button Content="Apply Threat Blocklists" Click="Blocklists_Click" Margin="0,0,8,0"/>
        <Button Content="Remove Threat Rules" Click="RemoveBlocklists_Click"/>
    </StackPanel>

    <DataGrid x:Name="PortsGrid"
              Grid.Row="1"
              AutoGenerateColumns="False"
              IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Protocol" Binding="{Binding Protocol}" Width="Auto"/>
            <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
            <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="Auto"/>
            <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="Auto"/>
            <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" Width="*"/>
            <DataGridTextColumn Header="Service" Binding="{Binding ServiceName}" Width="*"/>
            <DataGridTemplateColumn Header="Block">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Button Content="Block" Click="Block_Click" Padding="6,2" />
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>

    <TextBlock x:Name="StatusText"
               Grid.Row="2"
               Margin="0,8,0,0"
               Text="Ready"/>
</Grid>
</UserControl>
